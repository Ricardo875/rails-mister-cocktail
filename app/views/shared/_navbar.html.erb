<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.png", alt: "Cocktail Aspirante" %>
  </a>

  <!-- Right Side Navigation -->
  <div class="navbar-wagon-right">
    <div class="search-form">
      <form action="/" class="form-inline">
        <input type="text" name="cocktailsearch" placeholder="Cocktail to search" class="form-control">
        <input type="submit" value="Search" class="btn btn-primary">
      </form>
    </div>
    <%= link_to 'Add a cocktail', new_cocktail_path, class: 'btn btn-success' %>
  </div>

</div>
