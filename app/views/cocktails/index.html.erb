<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(../../assets/images/cocktails.jpg)">
  <div class="banner-content">
    <h1>Welcome to Cocktail Aspirante</h1>
    <h3>Discover new cocktails, share yours.</h3>
  </div>
</div>
<div class="background">
    <div class="empty"></div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
        <div> <%= link_to cocktail_path(cocktail) do %>

          <div class="card" style="background-image: linear-gradient(rgba(180,209,31,0.2), rgba(255,242,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            <div class="card-category">Super choice</div>
            <div class="card-description">
              <h2> <%= cocktail.name %> </h2>
            </div>
          </div>
        </div>
      <% end %>
    </div> <% end %>
  </div>
</div>

<br><br>

<hr>

<div class="text-center padded" id="newsletter">
  <h2>Stay in touch</h2>
  <p>Leave your mail to receive our latest additions</p>
  <form class="form-inline">
    <input type="email" placeholder="martini@gmail.com" class="form-control">
    <input type="submit" value="Subscribe" class="btn btn-primary btn-bordered btn-bordered-primary">
  </form>
</div>
<hr>

